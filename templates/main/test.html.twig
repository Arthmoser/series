{% extends 'base.html.twig' %}

{% block body %}
    <h1>Test !</h1>

    {# création de variable #}
    {% set name = 'François' %}

    <h2>Hello {{ name ~ " " ~ name }} !</h2>

    {% set colors = ['red', 'purple', 'green', 'yellow'] %}

    {% for color in colors %}
        <div style="background: {{ color }}">{{ color }}</div>

        {% if loop.first %}
            <div>Première itération</div>
        {% endif %}

        {# index de l'élément courant#}
        <div>index de l'élément courant : {{ loop.index }} / {{ loop.length }}</div>

        {% if loop.last %}
            <div>Dernière itération</div>
        {% endif %}

        {# Si tableau est vide alors on passe dans le else #}

        {% else %}

            <div>Pas d'élément</div>

    {% endfor %}

    {# manipulation d'objet' #}

    {% set serie =
        {
        title : "LOTR",
        year :2022,
        platforme : "Amazon"
        }
    %}

    <h2>Tite de la série : {{ serie.title }}</h2>

    {# Boucler sur l'objet #}

    {% for key, val in serie %}
        <div> {{ key }} : {{ val }} </div>
    {% endfor %}

    <div> {{ name | upper | lower |capitalize }} : {{ name | length }} lettres</div>
    <div> {{ colors | join(" | ") }} </div>

    <div> {{ "now" | date('d-m-y') }} </div>

{% endblock %}
{% block title %} {{ parent()}} | Test {% endblock %}
