{% extends 'base.html.twig' %}

{# parent() permet de récupérer ce que contient le bloc de la base #}
{% block title %} {{ parent()}} | home {% endblock %}

{# si on redefinis le contenus, ça ecrase #}
{%  block body %}
    <h1>Welcome to series {{ name }} !</h1>

    <h2>Serie's detail</h2>

    <ul>
        {% for key, val in serie %}
            <li>{{ key }} : {{ val }}</li>
        {% endfor %}
    </ul>

    {% set var ='<strong>titre en gras</strong>' %}

    {{ var | raw }}

{% endblock %}